{
  "name": "mini-apps",
  "version": "0.0.1",
  "description": "Mini Apps",
  "main": "index.js",
  "repository": "git@github.com:hieudoanm/mini-apps.git",
  "author": "hieudoanm <hieumdoan@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:coins": "yarn workspace coins build",
    "build:countries": "yarn workspace countries build",
    "build:forex": "yarn workspace forex build",
    "build:pomodoro": "yarn workspace pomodoro build",
    "build:shared": "yarn workspace shared build",
    "build:status": "yarn workspace status build",
    "build": "yarn build:shared && yarn build:coins && yarn build:countries && yarn build:forex && yarn build:pomodoro && yarn build:status",
    "dev:coins": "yarn workspace coins dev",
    "dev:countries": "yarn workspace countries dev",
    "dev:forex": "yarn workspace forex dev",
    "dev:pomodoro": "yarn workspace pomodoro dev",
    "dev:status": "yarn workspace status dev",
    "dev": "concurrently --kill-others-on-fail \"yarn dev:coins\" \"yarn dev:countries\" \"yarn dev:forex\" \"yarn dev:pomodoro\" \"yarn dev:status\"",
    "export:coins": "yarn workspace coins export",
    "export:countries": "yarn workspace countries export",
    "export:forex": "yarn workspace forex export",
    "export:pomodoro": "yarn workspace pomodoro export",
    "export:status": "yarn workspace status export",
    "export": "yarn export:coins && yarn export:countries && yarn export:forex && yarn export:pomodoro && yarn export:status",
    "lint:coins": "yarn workspace coins lint",
    "lint:countries": "yarn workspace countries lint",
    "lint:forex": "yarn workspace forex lint",
    "lint:pomodoro": "yarn workspace pomodoro lint",
    "lint:shared": "yarn workspace shared lint",
    "lint:status": "yarn workspace status lint",
    "lint": "yarn lint:shared && yarn lint:coins && yarn lint:countries && yarn lint:forex && yarn lint:pomodoro && yarn lint:status",
    "test:coins": "yarn workspace coins test",
    "test:countries": "yarn workspace countries test",
    "test:forex": "yarn workspace forex test",
    "test:pomodoro": "yarn workspace pomodoro test",
    "test:shared": "yarn workspace shared test",
    "test:status": "yarn workspace status test",
    "test": "yarn test:shared && yarn test:coins && yarn test:forex && yarn test:pomodoro && yarn test:status"
  },
  "devDependencies": {
    "concurrently": "7.2.2",
    "husky": "8.0.1",
    "prettier": "2.7.1",
    "pretty-quick": "3.1.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
